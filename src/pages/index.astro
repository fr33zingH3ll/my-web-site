---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<div class="parent">
				<div class="shadow white border-radius-5 div1">
					<ul class="menu">
						<span class="highlight"></span>
						<li class="menu-item actif">1</li>
						<li class="menu-item">2</li>
						<li class="menu-item">3</li>
						<li class="menu-item">4</li>
					</ul>
				</div>
				<div class="shadow white border-radius-5 div2"> 2</div>
				<div class="shadow white border-radius-5 div3"> 3</div>
				<div class="shadow white border-radius-5 div4"> 4</div>
				</div> 
		</main>
	</body>

	<script src="../styles/styles.js"></script>
</html>
